{
    "name": "roelofr/laravel-encryption-cast",
    "description": "An Eloquent cast to encrypt and decrypt data, whilst still allowing your own casts",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Roelof Roos",
            "email": "github@roelof.io"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "illuminate/contracts": "^7.0",
        "illuminate/database": "^7.0",
        "illuminate/support": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "slevomat/coding-standard": "^6.3",
        "nunomaduro/collision": "^4.2",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "php-parallel-lint/php-parallel-lint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Roelofr\\EncryptionCast\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Roelofr\\EncryptionCast\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Roelofr\\EncryptionCast\\Providers\\ServiceProvider"
            ],
            "aliases": {}
        }
    },
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit"
        ]
    }
}
